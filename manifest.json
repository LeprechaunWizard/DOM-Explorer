{
    "name": "DOM Explorer",
    "version": "1.0",
    "description": "Compares a website's old and new Domain Object Model.",
    "permissions": ["activeTab","declarativeContent", "storage", "bookmarks"], 
    "background": {
        "scripts": ["/scripts/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "views/popup.html",
        "default_icon": {
            "512": "images/icon.png"
        }
    },
    "icons": {
        "512": "images/icon.png"
    },
    "web_accessible_resources": [
        "/scripts/diff.js"
    ],
    "content_security_policy": "script-src 'self' https://google.com; img-src 'self' https://google.com data: *; object-src 'self'",
    "manifest_version": 2
}